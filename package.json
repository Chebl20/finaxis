{
  "name": "finaxis-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "FINAXIS - SaaS de gest√£o financeira em nuvem",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently -n 'API,WEB' -c 'bgBlue.bold,bgGreen.bold' \"npm run dev -w @finaxis/api\" \"npm run dev -w @finaxis/web\"",
    "dev:api": "npm run dev -w @finaxis/api",
    "dev:web": "npm run dev -w @finaxis/web",
    "build": "npm run build -w @finaxis/api && npm run build -w @finaxis/web",
    "start": "node apps/api/dist/index.js",
    "start:web": "vite preview --host --port 5173",
    "test": "npm test -w @finaxis/api",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "db:migrate": "npm run migrate -w @finaxis/api",
    "db:seed": "npm run seed -w @finaxis/api",
    "db:reset": "npm run reset -w @finaxis/api",
    "prepare": "[ -f .git ] && husky install || :",
    "postinstall": "[ -z \"$HUSKY\" ] && [ \"$NODE_ENV\" != \"production\" ] && [ -d .git ] && husky install || :"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.9",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.1",
    "eslint": "^8.50.0",
    "prettier": "^3.0.0",
    "typescript": "^5.2.2",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "dependencies": {
    "@fastify/rate-limit": "^7.0.1",
    "@fastify/sensible": "^6.0.4"
  }
}
